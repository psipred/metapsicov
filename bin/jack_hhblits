#!/bin/tcsh -f

# This script attempts to bootstrap an HHBLITS search using jackhmmer
# set echo
set jobid = $1
set jackhmmerbindir = $2
set hhbindir = $3
set tmpdir = $4
set db = $5
set fasta_file = $6
set bindir = $7

setenv PATH "${PATH}:${jackhmmerbindir}:${hhbindir}"
setenv HHLIB "${hhbindir}"

cd ${tmpdir}

if ($status) then
   exit 1
endif
echo "jackhmmer"
$jackhmmerbindir/src/jackhmmer --cpu 4 -N 3 -E 10 --incE 1e-3 --noali --tblout $jobid.tbl $fasta_file $db

if ($status) then
   exit 1
endif
echo "esl-sfetch"
$jackhmmerbindir/easel/miniapps/esl-sfetch -f $db $jobid.tbl > $jobid.fseqs

if ($status) then
   exit 1
endif

cat $fasta_file >> $jobid.fseqs

mkdir -p $tmpdir/$jobid-mya3m
mkdir -p $tmpdir/$jobid-myhhm
mkdir -p $tmpdir/$jobid-mydb

cd $jobid-mya3m

if ($status) then
   exit 1
endif
echo "fasta2a3msplit"
$bindir/bin/fasta2a3msplit < $tmpdir/$jobid.fseqs

if ($status) then
   exit 1
endif

cd ..

if ($status) then
   exit 1
endif
echo "Building hh db"
#33 mins to here
#perl $bindir/bin/hhblitsdb.pl -cpu 4 -o $jobid-mydb/mydb -ia3m $jobid-mya3m > /dev/null
#still using old hhsuite 2 db creation script becase hhsuitedb.py
# This take 4 hours! replace with ffindex build and cstranslate commands
#python $HHLIB/scripts/hhsuitedb.py --cpu 4 -o $tmpdir/$jobid-mydb/mydb --ia3m "${tmpdir}/${jobid}-mya3m/*" --force > /dev/null

$HHLIB/build/lib/ffindex/src/ffindex_build -s $jobid-mydb/mydb_a3m.ffdata $jobid-mydb/mydb_a3m.ffindex $jobid-mya3m/
foreach x ($jobid-mya3m/*)
    set filename = `echo $x | sed -e 's/\.a3m//'`
    $HHLIB/build/src/hhmake -i $x -o $x.hhm
end
#remove first line from each hhm because reasons
foreach x ($jobid-mya3m/*.hhm)
    tail -n +2 $x > tmpfile
    mv tmpfile $jobid-hhm/$x
# end
#80 mins to here
$HHLIB/build/lib/ffindex/src/ffindex_build -s $jobid-mydb/mydb_hhm.ffdata $jobid-mydb/mydb_hhm.ffindex $jobid-myhhm/
$HHLIB/build/src/cstranslate -A $HHLIB/data/cs219.lib -D $HHLIB/data/context_data.lib -x 0.3 -c 4 -f -i $jobid-mydb/mydb_a3m -o $jobid-mydb/mydb_cs219 -I a3m -b
#120 to here
if ($status) then
   exit 1
endif
echo "hhblits"
# NOTE - assumes that $jobid.a3m is already there!
$HHLIB/build/src/hhblits -i $jobid.a3m -d $jobid-mydb/mydb -oa3m $jobid.a3mout -e 1E-3 -n 3 -cpu 4 -diff inf -id 99 -cov 50

if ($status) then
   exit 1
endif

\rm -rf $jobid-mya3m &
\rm -rf $jobid-mydb &
\rm -rf $jobid-myhhm &
echo "making psicov input"
egrep -v "^>" $jobid.a3mout | sed 's/[a-z]//g' > $jobid.jackaln
